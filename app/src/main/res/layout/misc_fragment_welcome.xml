<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/softMainGrey"
    android:orientation="vertical">

    <TextView
        style="@style/dialog_title"
        android:text="@string/welcome"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="@string/trial_period_initialization"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/welcome_free_trial"
            style="@style/yes_no_bottom_button"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="-1dp"
            android:textColor="@color/colorAccent"
            android:layout_weight="1"
            android:text="@string/free_trial" />

        <TextView
            android:id="@+id/welcome_purchase"
            style="@style/yes_no_bottom_button"
            android:layout_marginEnd="-1dp"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            android:text="@string/purchase" />

    </LinearLayout>

</LinearLayout>