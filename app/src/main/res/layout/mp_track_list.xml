<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/mp_track_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false" />


    <TextView
        android:id="@+id/mp_track_list_empty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gGrey"
        android:textSize="18sp"
        android:text="@string/no_tracks"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/mp_track_list_recycler_view"
        app:layout_constraintEnd_toEndOf="@id/mp_track_list_recycler_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/mp_track_list_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/mp_track_list_recycler_view"
        app:layout_constraintEnd_toEndOf="@id/mp_track_list_recycler_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="@string/loading"/>

    </com.facebook.shimmer.ShimmerFrameLayout>


</android.support.constraint.ConstraintLayout>