<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    tools:context="com.mnemo.angler.playlist_manager.PlaylistManagerFragment">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:elevation="4dp"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/playlist_manager_drawer_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selected_menu"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/settings"
            android:transitionName="back"/>

        <TextView
            android:id="@+id/playlist_manager_top_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/gGrey"
            android:textSize="16sp"
            android:text="@string/playlist_manager"/>

        <ImageButton
            android:id="@+id/new_playlist_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_playlist_add_white_24dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="end"
            android:alpha="0.5"/>

    </android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/playlist_manager_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gGrey"
        android:transitionName="separator"/>

    <GridView
        android:id="@+id/playlist_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:verticalSpacing="8dp"
        android:numColumns="3"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:clipToPadding="false"
        android:gravity="center"/>


</LinearLayout>
