<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/softMainGrey"
    android:orientation="vertical">

    <ExpandableListView
        android:id="@+id/add_tracks_expandable_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:groupIndicator="@drawable/invisible_rectangle"
        android:paddingBottom="8dp"
        android:paddingTop="6dp" />

    <View style="@style/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/add_tracks_close"
            style="@style/yes_no_bottom_button"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="-1dp"
            android:layout_weight="1"
            android:text="@string/close" />

        <TextView
            android:id="@+id/add_tracks_add"
            style="@style/yes_no_bottom_button"
            android:layout_marginEnd="-1dp"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            android:alpha="0.3"
            android:enabled="false"
            android:text="@string/add" />

    </LinearLayout>

</LinearLayout>