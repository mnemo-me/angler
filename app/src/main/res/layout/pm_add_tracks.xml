<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/softMainGrey"
    android:orientation="vertical">

    <ExpandableListView
        android:id="@+id/add_tracks_expandable_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="6dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        android:groupIndicator="@drawable/invisible_rectangle"/>

    <View
        android:id="@+id/add_tracks_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:background="@color/gGrey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/add_tracks_close"
            style="@style/portrait_options"
            android:layout_weight="1"
            android:layout_marginEnd="1dp"
            android:text="@string/close" />

        <TextView
            android:id="@+id/add_tracks_add"
            style="@style/portrait_options"
            android:layout_weight="1"
            android:layout_marginStart="1dp"
            android:text="@string/add"
            android:enabled="false"
            android:alpha="0.3"/>

    </LinearLayout>

</LinearLayout>