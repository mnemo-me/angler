<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EF000000"
    android:clickable="true"
    tools:context="com.mnemo.angler.background_changer.ImageCarouselFragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/image_carousel_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/image_carousel_advice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/image_carousel_advice_text"
        android:textColor="#aba9a9" />

    <android.support.v4.view.ViewPager
        android:id="@+id/image_carousel_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</RelativeLayout>
