<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.mnemo.angler.artists.ArtistConfigurationFragment">

    <ImageButton
        android:id="@+id/artist_conf_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:alpha="0.5"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_arrow_back_white_24dp"
        android:transitionName="back"/>

    <TextView
        android:id="@+id/artist_conf_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:transitionName="title"
        app:layout_constraintBottom_toTopOf="@id/artist_conf_separator"
        app:layout_constraintEnd_toStartOf="@id/artist_conf_cardview"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Marilyn Manson" />

    <android.support.v7.widget.CardView
        android:id="@+id/artist_conf_cardview"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:transitionName="card">

        <ImageView
            android:id="@+id/artist_conf_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/back3"
            android:transitionName="cover"/>

    </android.support.v7.widget.CardView>

    <View
        android:id="@+id/artist_conf_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/gGrey"
        app:layout_constraintTop_toBottomOf="@id/artist_conf_cardview"
        android:transitionName="separator"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/artist_conf_tab_layout"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="#FFFFFF"
        app:tabTextColor="@color/gGrey"
        app:tabIndicatorHeight="0dp"
        app:layout_constraintBottom_toTopOf="@id/artist_conf_separator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/artist_conf_cardview"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/artist_conf_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="163dp"
        app:layout_constraintTop_toBottomOf="@id/artist_conf_separator"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
