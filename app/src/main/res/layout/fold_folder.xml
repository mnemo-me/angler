<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/half_margin"
    android:paddingEnd="@dimen/half_margin">

    <ImageView
        android:id="@+id/folder_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/folder"
        android:contentDescription="@string/folder" />

    <ImageView
        android:id="@+id/folder_cover"
        android:layout_height="48dp"
        android:layout_width="48dp"
        tools:src="@drawable/album_default"
        android:contentDescription="@string/cover" />


    <TextView
        android:id="@+id/folder_name"
        style="@style/album_title"
        tools:text="Library"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toBottomOf="@id/folder_image"
        app:layout_constraintStart_toStartOf="@id/folder_image"
        app:layout_constraintEnd_toEndOf="@id/folder_image"/>

</androidx.constraintlayout.widget.ConstraintLayout>