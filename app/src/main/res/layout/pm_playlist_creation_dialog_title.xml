<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/creation_playlist_dialog_title"
        style="@style/dialog_title"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Sweet dreams" />

    <ImageButton
        android:id="@+id/creation_playlist_dialog_delete_button"
        style="@style/button"
        android:layout_marginEnd="4dp"
        android:padding="@dimen/half_margin"
        android:contentDescription="@string/delete_playlist"
        android:src="@drawable/delete_playlist"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>