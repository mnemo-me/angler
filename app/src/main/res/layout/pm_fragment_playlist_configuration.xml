<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mnemo.angler.playlist_manager.PlaylistConfigurationFragment">

    <android.support.constraint.Group
        android:id="@+id/playlist_conf_expanded_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="playlist_conf_toolbar, playlist_conf_cardview" />


    <android.support.v7.widget.Toolbar
        android:id="@+id/playlist_conf_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:elevation="4dp"
        app:contentInsetStart="0dp"
        android:layout_marginEnd="124dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/playlist_conf_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:alpha="0.5"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back_white_24dp"
            android:transitionName="back"/>

        <ImageButton
            android:id="@+id/playlist_conf_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:layout_gravity="end"
            android:visibility="gone"
            android:src="@drawable/ic_format_list_bulleted_white_24dp" />


    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.Toolbar
        android:id="@+id/playlist_conf_group_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:elevation="4dp"
        android:visibility="gone"
        app:contentInsetStart="0dp">

        <ImageButton
            android:id="@+id/playlist_conf_group_drawer_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:alpha="0.5"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back_white_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Group"
            android:textColor="#aba9a9"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/group_toolbar_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:alpha="0.5"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_delete_black_24dp" />

        <ImageButton
            android:id="@+id/group_toolbar_add_to_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:alpha="0.5"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_add_white_24dp" />

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/playlist_conf_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:transitionName="title"
        app:layout_constraintBottom_toTopOf="@id/playlist_conf_artist"
        app:layout_constraintEnd_toStartOf="@id/playlist_conf_cardview"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Marilyn Manson" />

    <TextView
        android:id="@+id/playlist_conf_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="8dp"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        tools:text="Marilyn Manson"
        android:maxLines="1"
        android:ellipsize="end"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/playlist_conf_title"
        app:layout_constraintBottom_toTopOf="@id/playlist_conf_tracks_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/playlist_conf_cardview"
        app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
        android:id="@+id/playlist_conf_tracks_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/gGrey"
        android:textSize="14sp"
        tools:text="123 tracks"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/playlist_conf_artist"
        app:layout_constraintBottom_toTopOf="@id/playlist_conf_separator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/playlist_conf_cardview"
        app:layout_constraintHorizontal_bias="0.0"/>


    <android.support.v7.widget.CardView
        android:id="@+id/playlist_conf_cardview"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:transitionName="card">

        <ImageView
            android:id="@+id/playlist_conf_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/back3"
            android:transitionName="cover"/>

    </android.support.v7.widget.CardView>


    <View
        android:id="@+id/playlist_conf_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/gGrey"
        app:layout_constraintTop_toBottomOf="@id/playlist_conf_cardview"
        android:transitionName="separator"/>


    <ListView
        android:id="@+id/playlist_conf_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="163dp"
        android:paddingBottom="4dp"
        android:clipToPadding="false"/>


</android.support.constraint.ConstraintLayout>

