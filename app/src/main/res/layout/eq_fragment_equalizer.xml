<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mnemo.angler.equalizer.EqualizerFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/equalizer_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:elevation="4dp"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/equalizer_drawer_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selected_menu"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/settings"
            android:transitionName="back"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/gGrey"
            android:textSize="16sp"
            android:text="@string/equalizer" />

        <Switch
            android:id="@+id/equalizer_on_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:contentDescription="equalizer switch on/off"
            android:src="@drawable/ic_layers_black_24dp"/>


    </android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/equalizer_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gGrey"
        android:transitionName="separator"
        app:layout_constraintTop_toBottomOf="@id/equalizer_toolbar"/>


    <!-- equalizer one -->
    <LinearLayout
        android:id="@+id/equalizer_one"
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="164dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/equalizer_separator"
        app:layout_constraintBottom_toBottomOf="@id/equalizer_bottom_separator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/equalizer_two">

        <TextView
            android:id="@+id/equalizer_one_db"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:text="1dB"/>

        <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
            android:id="@+id/equalizer_one_seekbar"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal">

            <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:splitTrack="false"
                app:seekBarRotation="CW270"
                android:progress="50"
                android:progressTint="@color/colorAccent"
                android:thumbTint="@color/colorAccent"/>

        </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

        <TextView
            android:id="@+id/equalizer_one_hz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="60 Hz"
            android:textColor="#FFFFFF" />

    </LinearLayout>



    <!-- equalizer two -->
    <LinearLayout
        android:id="@+id/equalizer_two"
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="164dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/equalizer_separator"
        app:layout_constraintBottom_toBottomOf="@id/equalizer_bottom_separator"
        app:layout_constraintStart_toEndOf="@id/equalizer_one"
        app:layout_constraintEnd_toStartOf="@id/equalizer_three">

        <TextView
            android:id="@+id/equalizer_two_db"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="1dB"
            android:textColor="#FFFFFF" />

        <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
            android:id="@+id/equalizer_two_seekbar"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal">

            <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:splitTrack="false"
                app:seekBarRotation="CW270"
                android:progress="50"
                android:progressTint="@color/colorAccent"
                android:thumbTint="@color/colorAccent"/>

        </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

        <TextView
            android:id="@+id/equalizer_two_hz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="230 Hz"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <!-- equalizer three -->
    <LinearLayout
        android:id="@+id/equalizer_three"
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="164dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/equalizer_separator"
        app:layout_constraintBottom_toBottomOf="@id/equalizer_bottom_separator"
        app:layout_constraintStart_toEndOf="@id/equalizer_two"
        app:layout_constraintEnd_toStartOf="@id/equalizer_four">

        <TextView
            android:id="@+id/equalizer_three_db"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="1dB"
            android:textColor="#FFFFFF" />

        <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
            android:id="@+id/equalizer_three_seekbar"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal">

            <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:splitTrack="false"
                app:seekBarRotation="CW270"
                android:progress="50"
                android:progressTint="@color/colorAccent"
                android:thumbTint="@color/colorAccent"/>

        </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

        <TextView
            android:id="@+id/equalizer_three_hz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="910 Hz"
            android:textColor="#FFFFFF" />

    </LinearLayout>


    <!-- equalizer four -->
    <LinearLayout
        android:id="@+id/equalizer_four"
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="164dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/equalizer_separator"
        app:layout_constraintBottom_toBottomOf="@id/equalizer_bottom_separator"
        app:layout_constraintStart_toEndOf="@id/equalizer_three"
        app:layout_constraintEnd_toStartOf="@id/equalizer_five">

        <TextView
            android:id="@+id/equalizer_four_db"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="1dB"
            android:textColor="#FFFFFF" />

        <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
            android:id="@+id/equalizer_four_seekbar"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal">

            <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:splitTrack="false"
                app:seekBarRotation="CW270"
                android:progress="50"
                android:progressTint="@color/colorAccent"
                android:thumbTint="@color/colorAccent"/>

        </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

        <TextView
            android:id="@+id/equalizer_four_hz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="3,6 kHz"
            android:textColor="#FFFFFF" />

    </LinearLayout>


    <!-- equalizer five -->
    <LinearLayout
        android:id="@+id/equalizer_five"
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="164dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/equalizer_separator"
        app:layout_constraintBottom_toBottomOf="@id/equalizer_bottom_separator"
        app:layout_constraintStart_toEndOf="@id/equalizer_four"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/equalizer_five_db"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="1dB"
            android:textColor="#FFFFFF" />

        <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
            android:id="@+id/equalizer_five_seekbar"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal">

            <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:splitTrack="false"
                app:seekBarRotation="CW270"
                android:progress="50"
                android:progressTint="@color/colorAccent"
                android:thumbTint="@color/colorAccent"/>

        </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

        <TextView
            android:id="@+id/equalizer_five_hz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="14 kHz"
            android:textColor="#FFFFFF" />

    </LinearLayout>




    <View
        android:id="@+id/equalizer_bottom_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="4dp"
        android:background="@color/gGrey"
        app:layout_constraintBottom_toTopOf="@id/equalizer_presets"/>

    <TextView
        android:id="@+id/equalizer_presets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="8dp"
        android:text="Presets"
        android:textColor="@color/gGrey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/equalizer_radio_group_one"/>


    <RadioGroup
        android:id="@+id/equalizer_radio_group_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/default_margin"
        android:paddingEnd="@dimen/default_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/equalizer_radio_group_two">

        <RadioButton
            style="@style/radio_button"
            android:text="custom"/>

        <RadioButton
            style="@style/radio_button"
            android:text="normal"/>

        <RadioButton
            style="@style/radio_button"
            android:text="classical"/>


        <RadioButton
            style="@style/radio_button"
            android:text="dance"/>


    </RadioGroup>

    <RadioGroup
        android:id="@+id/equalizer_radio_group_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/default_margin"
        android:paddingEnd="@dimen/default_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/equalizer_radio_group_three">

        <RadioButton
            style="@style/radio_button"
            android:text="flat"/>

        <RadioButton
            style="@style/radio_button"
            android:text="folk"/>

        <RadioButton
            style="@style/radio_button"
            android:text="metal"/>


        <RadioButton
            style="@style/radio_button"
            android:text="hip hop"/>


    </RadioGroup>

    <RadioGroup
        android:id="@+id/equalizer_radio_group_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/default_margin"
        android:paddingEnd="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <RadioButton
            style="@style/radio_button"
            android:text="jazz"/>

        <RadioButton
            style="@style/radio_button"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="pop"/>

        <RadioButton
            style="@style/radio_button"
            android:text="rock"/>


        <RadioButton
            style="@style/radio_button"
            android:visibility="invisible"
            android:text="X"/>


    </RadioGroup>


</android.support.constraint.ConstraintLayout>
