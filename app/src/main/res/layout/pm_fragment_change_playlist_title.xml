<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#44000000"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.mnemo.angler.playlist_manager.ChangePlaylistTitleFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_centerInParent="true"
        android:elevation="24dp"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="?android:actionBarSize"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:text="Enter new playlist title"/>

            <EditText
                android:id="@+id/change_playlist_title_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                android:lines="1">
            </EditText>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?android:actionBarSize">

                <Button
                    android:id="@+id/change_playlist_title_accept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/colorAccent"
                    android:background="#00000000"
                    android:text="@string/ok"/>

                <Button
                    android:id="@+id/change_playlist_title_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/change_playlist_title_accept"
                    android:textColor="@color/colorAccent"
                    android:background="#00000000"
                    android:text="@string/cancel"/>


            </RelativeLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>




</RelativeLayout>
