<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/softMainGrey">

    <TextView
        style="@style/dialog_title"
        android:text="@string/add_tracks_to_playlist"
        app:layout_constraintBottom_toTopOf="@id/add_tracks_upper_separator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/add_tracks_count"
        style="@style/dialog_title"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toTopOf="@id/add_tracks_upper_separator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="32" />

    <View
        android:id="@+id/add_tracks_upper_separator"
        style="@style/line"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>