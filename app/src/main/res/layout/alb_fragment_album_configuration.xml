<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mnemo.angler.albums.AlbumConfigurationFragment">

    <ImageButton
        android:id="@+id/album_conf_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:alpha="0.5"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_arrow_back_white_24dp"
        android:transitionName="back"/>

    <TextView
        android:id="@+id/album_conf_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:transitionName="title"
        app:layout_constraintBottom_toTopOf="@id/album_conf_artist"
        app:layout_constraintEnd_toStartOf="@id/album_conf_cardview"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Marilyn Manson" />

    <TextView
        android:id="@+id/album_conf_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="8dp"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        tools:text="Marilyn Manson"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/album_conf_title"
        app:layout_constraintBottom_toTopOf="@id/album_conf_tracks_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/album_conf_cardview"
        app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
        android:id="@+id/album_conf_tracks_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/gGrey"
        android:textSize="14sp"
        tools:text="123 tracks"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/album_conf_artist"
        app:layout_constraintBottom_toTopOf="@id/album_conf_separator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/album_conf_cardview"
        app:layout_constraintHorizontal_bias="0.0"/>


    <android.support.v7.widget.CardView
        android:id="@+id/album_conf_cardview"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:transitionName="card">

        <ImageView
            android:id="@+id/album_conf_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/back3"
            android:transitionName="cover"/>

    </android.support.v7.widget.CardView>


    <View
        android:id="@+id/album_conf_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/gGrey"
        app:layout_constraintTop_toBottomOf="@id/album_conf_cardview"
        android:transitionName="separator"/>


    <ListView
        android:id="@+id/album_conf_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="163dp"
        android:paddingTop="46dp"
        android:paddingBottom="4dp"
        android:clipToPadding="false"
        android:choiceMode="singleChoice"/>


</android.support.constraint.ConstraintLayout>