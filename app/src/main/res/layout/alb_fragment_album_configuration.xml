<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".drawer_items_fragments.albums.AlbumConfigurationFragment">

    <View
        android:id="@+id/album_conf_white_skrim"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#22FFFFFF"/>

    <ImageButton
        android:id="@+id/album_conf_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/back_selector"
        android:transitionName="back"/>

    <TextView
        android:id="@+id/album_conf_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:maxWidth="230dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:transitionName="title"
        app:layout_constraintBottom_toTopOf="@id/album_conf_artist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Marilyn Manson" />

    <TextView
        android:id="@+id/album_conf_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:maxWidth="230dp"
        android:textColor="@color/gGrey"
        android:textSize="14sp"
        tools:text="Marilyn Manson"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/album_conf_title"
        app:layout_constraintBottom_toTopOf="@id/album_conf_tracks_count"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/album_conf_tracks_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:maxWidth="230dp"
        android:textColor="@color/gGrey"
        android:textSize="14sp"
        tools:text="123 tracks"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/album_conf_artist"
        app:layout_constraintBottom_toBottomOf="@id/album_conf_white_skrim"
        app:layout_constraintStart_toStartOf="parent"/>


    <android.support.v7.widget.CardView
        android:id="@+id/album_conf_cardview"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:transitionName="card">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/album_conf_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/back3"
                android:transitionName="cover"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/background_selector"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>


    <LinearLayout
        android:id="@+id/album_conf_play_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/album_conf_white_skrim"
        android:background="?android:selectableItemBackgroundBorderless">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play_arrow_white_24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/play_all"
            android:textColor="#FFFFFF"
            android:textAllCaps="true"/>

    </LinearLayout>


    <ListView
        android:id="@+id/album_conf_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="160dp"
        android:paddingTop="50dp"
        android:paddingBottom="4dp"
        android:clipToPadding="false"
        android:choiceMode="singleChoice"/>


</android.support.constraint.ConstraintLayout>