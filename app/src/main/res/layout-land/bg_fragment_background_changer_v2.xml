<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mnemo.angler.background_changer.BackgroundChangerFragmentv2">

    <ImageView
        android:id="@+id/overlay_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="240dp"
        android:contentDescription="@string/background_image"
        android:scaleType="centerCrop"
        tools:src="@drawable/back4" />

    <FrameLayout
        android:id="@+id/overlay_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="240dp"
        android:background="#CC000000"
        tools:background="#CC000000" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/background_changer_toolbar"
        android:layout_width="240dp"
        android:layout_height="?android:actionBarSize"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/background_changer_drawer_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_black_24dp"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/settings"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="@string/change_background" />

    </android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/background_changer_separator"
        android:layout_width="224dp"
        android:layout_height="1dp"
        android:background="#44000000"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/background_changer_toolbar"/>

    <TextView
        android:id="@+id/background_changer_select_background"
        style="@style/drawer_item"
        android:text="apply"
        app:layout_constraintTop_toBottomOf="@id/background_changer_separator"
        app:layout_constraintEnd_toStartOf="@id/overlay_background"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/background_changer_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintStart_toEndOf="@id/background_changer_toolbar">

        <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
            android:id="@+id/overlay_seekbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:max="255"
            android:splitTrack="false"
            app:seekBarRotation="CW270"
            android:progressTint="@color/colorAccent"
            android:thumbTint="@color/colorAccent"/>

    </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>


</android.support.constraint.ConstraintLayout>
