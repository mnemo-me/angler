<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    app:cardCornerRadius="2dp"
    android:layout_margin="2dp"
    app:cardBackgroundColor="@android:color/transparent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="146dp"
        android:layout_height="120dp"
        android:background="@drawable/white_frame">

        <ImageView
            android:id="@+id/background_add_image_photo"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/baseline_add_photo_alternate_white_2_48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/background_add_image_text"
            app:layout_constraintVertical_chainStyle="packed"/>

        <TextView
            android:id="@+id/background_add_image_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/load_image"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/background_add_image_photo"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
