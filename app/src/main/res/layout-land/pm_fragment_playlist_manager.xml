<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mnemo.angler.playlist_manager.PlaylistManagerFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/playlist_manager_toolbar"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:elevation="4dp"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/playlist_manager_drawer_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_black_24dp"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/settings"
            android:transitionName="back"/>

        <TextView
            android:id="@+id/playlist_manager_top_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="@string/playlist_manager"/>

    </android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/playlist_manager_separator"
        android:layout_width="224dp"
        android:layout_height="1dp"
        android:background="#44000000"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playlist_manager_toolbar"/>

    <TextView
        android:id="@+id/new_playlist_button"
        style="@style/landscape_options"
        android:text="@string/create_new_playlist"
        app:layout_constraintTop_toBottomOf="@id/playlist_manager_separator"/>

    <GridView
        android:id="@+id/playlist_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="240dp"
        android:verticalSpacing="8dp"
        android:numColumns="3"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:clipToPadding="false"
        android:gravity="center"/>


</android.support.constraint.ConstraintLayout>
