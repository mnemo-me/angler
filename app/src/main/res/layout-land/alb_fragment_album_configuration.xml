<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main_activity.fragments.albums.album_configuration.AlbumConfigurationFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/album_conf_toolbar"
        style="@style/toolbar"
        android:background="@color/softMainGrey"
        app:contentInsetStart="0dp">

        <ImageButton
            android:id="@+id/album_conf_back"
            style="@style/button"
            android:contentDescription="@string/back"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:id="@+id/album_conf_title"
            style="@style/title"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="210dp"
            tools:text="Marilyn Manson" />

        <ImageButton
            android:id="@+id/album_conf_play_all_button"
            style="@style/button"
            android:layout_gravity="end"
            android:contentDescription="@string/play_all"
            android:src="@drawable/ic_playlist_play_black_24dp" />

        <TextView
            android:id="@+id/album_conf_tracks_count"
            style="@style/title"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="210dp"
            android:textSize="12sp"
            tools:text="123 tracks" />

        <TextView
            android:id="@+id/album_conf_artist"
            style="@style/title"
            android:layout_gravity="end"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="@dimen/default_margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="210dp"
            android:textSize="12sp"
            tools:text="Marilyn Manson" />

    </android.support.v7.widget.Toolbar>


    <android.support.v7.widget.CardView
        android:id="@+id/album_conf_cardview"
        android:layout_width="240dp"
        android:layout_height="240dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/album_conf_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/album_conf_toolbar">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/album_conf_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:contentDescription="@string/cover"
                android:scaleType="centerCrop"
                tools:src="@drawable/back3" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/background_selector" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/album_conf_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="284dp"
        android:layout_marginTop="48dp"
        android:clipToPadding="false"
        android:paddingTop="40dp"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>