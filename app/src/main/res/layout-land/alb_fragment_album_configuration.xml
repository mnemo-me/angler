<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main_activity.fragments.albums.album_configuration.AlbumConfigurationFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/album_conf_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:contentInsetStart="0dp"
        android:background="@color/softMainGrey">

        <ImageButton
            android:id="@+id/album_conf_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/back_selector"
            android:transitionName="back"/>

        <TextView
            android:id="@+id/album_conf_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:maxWidth="210dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:transitionName="title"
            tools:text="Marilyn Manson" />

        <ImageButton
            android:id="@+id/album_conf_play_all_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/selected_play_all_button"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="end"/>

        <TextView
            android:id="@+id/album_conf_tracks_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:maxWidth="210dp"
            android:layout_marginBottom="8dp"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            tools:text="123 tracks"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_gravity="end" />

        <TextView
            android:id="@+id/album_conf_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="32dp"
            android:layout_gravity="end"
            android:maxWidth="210dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:transitionName="title"
            tools:text="Marilyn Manson" />

    </android.support.v7.widget.Toolbar>


    <android.support.v7.widget.CardView
        android:id="@+id/album_conf_cardview"
        android:layout_width="240dp"
        android:layout_height="240dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/album_conf_toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/album_conf_list"
        android:transitionName="card"
        app:cardCornerRadius="2dp"
        android:elevation="0dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/album_conf_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/back3"
                android:transitionName="cover"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/background_selector"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/album_conf_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="284dp"
        android:layout_marginTop="48dp"
        android:clipToPadding="false"/>


</android.support.constraint.ConstraintLayout>