<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main_activity.fragments.playlists.PlaylistConfigurationFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/playlist_conf_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:contentInsetStart="0dp"
        android:background="#22FFFFFF">


        <ImageButton
            android:id="@+id/playlist_conf_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/back_selector"
            android:transitionName="back"/>

        <TextView
            android:id="@+id/playlist_conf_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:maxWidth="210dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:transitionName="title"
            tools:text="Marilyn Manson" />

        <TextView
            android:id="@+id/playlist_conf_tracks_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:maxWidth="210dp"
            android:layout_marginBottom="8dp"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            tools:text="123 tracks"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_gravity="end" />

    </android.support.v7.widget.Toolbar>


    <android.support.v7.widget.CardView
        android:id="@+id/playlist_conf_cardview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playlist_conf_toolbar"
        app:layout_constraintEnd_toStartOf="@id/playlist_conf_list"
        android:layout_marginTop="16dp"
        android:transitionName="card"
        app:cardCornerRadius="2dp"
        android:elevation="0dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/playlist_conf_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/back3"
                android:transitionName="cover"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/background_selector"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/playlist_conf_play_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?android:selectableItemBackgroundBorderless"
        app:layout_constraintStart_toStartOf="@id/playlist_conf_cardview"
        app:layout_constraintEnd_toEndOf="@id/playlist_conf_cardview"
        app:layout_constraintTop_toBottomOf="@id/playlist_conf_cardview"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play_arrow_white_24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="@string/play_all"
            android:textColor="#FFFFFF"
            android:textAllCaps="true"/>

    </LinearLayout>


    <ListView
        android:id="@+id/playlist_conf_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="4dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="280dp"
        android:layout_marginTop="48dp"
        android:clipToPadding="false"
        android:choiceMode="singleChoice"/>


</android.support.constraint.ConstraintLayout>

