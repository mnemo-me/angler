<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.mnemo.angler.artists.ArtistConfigurationFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/artist_conf_cardview"
        android:layout_width="240dp"
        android:layout_height="240dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:transitionName="card"
        app:cardCornerRadius="0dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/artist_conf_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/back3"
                android:transitionName="cover"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/skrim_top_to_bottom"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/skrim"/>

            <ImageButton
                android:id="@+id/artist_conf_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_arrow_back_white_24dp"
                android:transitionName="back"/>

            <TextView
                android:id="@+id/artist_conf_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:transitionName="title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Marilyn Manson" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>


    <android.support.design.widget.TabLayout
        android:id="@+id/artist_conf_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="240dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#FFFFFF"
        app:tabTextColor="@color/gGrey"
        app:tabIndicatorHeight="0dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/artist_conf_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="240dp"
        android:background="@color/gGrey"
        app:layout_constraintTop_toBottomOf="@id/artist_conf_tab_layout"
        android:transitionName="separator"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/artist_conf_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        android:paddingBottom="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/artist_conf_separator"/>

</android.support.constraint.ConstraintLayout>
