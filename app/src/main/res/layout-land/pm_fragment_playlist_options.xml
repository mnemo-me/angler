<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.mnemo.angler.playlist_manager.PlaylistOptionsFragment">


    <android.support.v7.widget.CardView
        android:id="@+id/playlist_options_cardview"
        android:layout_width="240dp"
        android:layout_height="240dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:transitionName="card"
        android:elevation="0dp"
        app:cardCornerRadius="0dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/playlist_options_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/back3"
                android:transitionName="cover"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/skrim_top_to_bottom"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/skrim"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/playlist_options_toolbar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:contentInsetStart="0dp">


                <ImageButton
                    android:id="@+id/playlist_options_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:src="@drawable/ic_arrow_back_white_24dp"
                    android:transitionName="back"/>

                <ImageButton
                    android:id="@+id/playlist_options_options"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_format_list_bulleted_white_24dp"
                    android:transitionName="back"/>

            </android.support.v7.widget.Toolbar>

            <TextView
                android:id="@+id/playlist_options_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:transitionName="title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/playlist_options_tracks_count"
                tools:text="Marilyn Manson" />

            <TextView
                android:id="@+id/playlist_options_tracks_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                tools:text="123 tracks"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/playlist_options_play"
        style="@style/playlist_option_item_land"
        android:text="@string/play"
        app:layout_constraintBottom_toTopOf="@+id/playlist_options_change_title"
        app:layout_constraintStart_toEndOf="@id/playlist_options_cardview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/playlist_options_change_title"
        style="@style/playlist_option_item_land"
        android:text="@string/rename"
        app:layout_constraintBottom_toTopOf="@+id/playlist_options_change_cover"
        app:layout_constraintStart_toEndOf="@id/playlist_options_cardview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playlist_options_play" />

    <TextView
        android:id="@+id/playlist_options_change_cover"
        style="@style/playlist_option_item_land"
        android:text="@string/change_cover"
        app:layout_constraintBottom_toTopOf="@+id/playlist_options_show_tracks"
        app:layout_constraintStart_toEndOf="@id/playlist_options_cardview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playlist_options_change_title" />

    <TextView
        android:id="@+id/playlist_options_show_tracks"
        style="@style/playlist_option_item_land"
        android:text="show tracks"
        app:layout_constraintBottom_toTopOf="@+id/playlist_options_create"
        app:layout_constraintStart_toEndOf="@id/playlist_options_cardview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playlist_options_change_cover" />

    <TextView
        android:id="@+id/playlist_options_create"
        style="@style/playlist_option_item_land"
        android:text="create playlist"
        app:layout_constraintBottom_toTopOf="@id/playlist_options_delete_playlist"
        app:layout_constraintStart_toEndOf="@id/playlist_options_cardview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playlist_options_show_tracks"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/playlist_options_delete_playlist"
        style="@style/playlist_option_item_land"
        android:text="@string/delete_playlist"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/playlist_options_cardview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playlist_options_create" />



</android.support.constraint.ConstraintLayout>
