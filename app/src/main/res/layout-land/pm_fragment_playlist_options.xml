<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.mnemo.angler.playlist_manager.PlaylistOptionsFragment">


    <android.support.v7.widget.Toolbar
        android:id="@+id/playlist_options_toolbar"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:elevation="4dp"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/playlist_options_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_vertical"
            android:transitionName="back"/>

        <TextView
            android:id="@+id/playlist_options_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="32dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="@string/new_playlist"/>

    </android.support.v7.widget.Toolbar>



    <android.support.v7.widget.CardView
        android:id="@+id/playlist_options_cardview"
        android:layout_width="238dp"
        android:layout_height="238dp"
        android:layout_marginStart="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp">

        <ImageView
            android:id="@+id/playlist_options_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/back3"/>

    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/playlist_options_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:paddingBottom="8dp"
        android:textColor="@color/gGrey"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/playlist_options_cardview"
        app:layout_constraintBottom_toTopOf="@id/playlist_options_play"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/playlist_options_play"
        style="@style/playlist_option_item"
        android:text="play"
        app:layout_constraintBottom_toTopOf="@+id/playlist_options_change_title"
        app:layout_constraintStart_toEndOf="@id/playlist_options_cardview"
        app:layout_constraintTop_toBottomOf="@id/playlist_options_artist"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <TextView
        android:id="@+id/playlist_options_change_title"
        style="@style/playlist_option_item"
        android:text="@string/rename"
        app:layout_constraintBottom_toTopOf="@+id/playlist_options_change_cover"
        app:layout_constraintStart_toEndOf="@id/playlist_options_cardview"
        app:layout_constraintTop_toBottomOf="@id/playlist_options_play" />

    <TextView
        android:id="@+id/playlist_options_change_cover"
        style="@style/playlist_option_item"
        android:text="@string/change_cover"
        app:layout_constraintBottom_toTopOf="@+id/playlist_options_show_tracks"
        app:layout_constraintStart_toEndOf="@id/playlist_options_cardview"
        app:layout_constraintTop_toBottomOf="@id/playlist_options_change_title" />

    <TextView
        android:id="@+id/playlist_options_show_tracks"
        style="@style/playlist_option_item"
        android:text="show tracks"
        app:layout_constraintBottom_toTopOf="@+id/playlist_options_create"
        app:layout_constraintStart_toEndOf="@id/playlist_options_cardview"
        app:layout_constraintTop_toBottomOf="@id/playlist_options_change_cover" />

    <TextView
        android:id="@+id/playlist_options_create"
        style="@style/playlist_option_item"
        android:text="create playlist"
        app:layout_constraintBottom_toTopOf="@id/playlist_options_delete_playlist"
        app:layout_constraintStart_toEndOf="@id/playlist_options_cardview"
        app:layout_constraintTop_toBottomOf="@id/playlist_options_show_tracks"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/playlist_options_delete_playlist"
        style="@style/playlist_option_item"
        android:text="@string/delete_playlist"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/playlist_options_cardview"
        app:layout_constraintTop_toBottomOf="@id/playlist_options_create" />



</android.support.constraint.ConstraintLayout>
