
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mnemo.angler.MainFragment">

    <FrameLayout
        android:id="@+id/song_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="240dp"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_fragment_toolbar"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        app:contentInsetStart="0dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_black_24dp"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/settings"/>

        <Spinner
            android:id="@+id/main_fragment_playlist_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gGrey"
            android:background="@null"/>

    </android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/main_fragment_separator"
        android:layout_width="224dp"
        android:layout_height="1dp"
        android:background="#44000000"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_fragment_toolbar"/>

    <TextView
        android:id="@+id/playlist"
        style="@style/landscape_options"
        android:text="@string/playlist"
        app:layout_constraintTop_toBottomOf="@id/main_fragment_separator"/>

    <TextView
        android:id="@+id/artists"
        style="@style/landscape_options"
        android:text="@string/artists"
        app:layout_constraintTop_toBottomOf="@id/playlist"/>

</android.support.constraint.ConstraintLayout>


