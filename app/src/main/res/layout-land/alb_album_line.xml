<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="2dp"
    android:paddingBottom="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/album_line_album_one"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/album_line_album_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:transitionName="card"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/album_line_album_one_image"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_margin="1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/back3"
                    android:transitionName="cover" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/background_selector" />

            </RelativeLayout>


        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/album_line_album_one_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:lines="2"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:transitionName="title"
            tools:text="Library" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/album_line_album_two"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/album_line_album_three"
        app:layout_constraintStart_toEndOf="@+id/album_line_album_one"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:transitionName="card"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/album_line_album_two_image"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_margin="1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/back3"
                    android:transitionName="cover" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/background_selector" />

            </RelativeLayout>


        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/album_line_album_two_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:lines="2"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:transitionName="title"
            tools:text="Library" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/album_line_album_three"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/album_line_album_two"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:transitionName="card"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/album_line_album_three_image"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_margin="1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/back3"
                    android:transitionName="cover" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/background_selector" />

            </RelativeLayout>


        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/album_line_album_three_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:lines="2"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:transitionName="title"
            tools:text="Library" />

    </LinearLayout>



</android.support.constraint.ConstraintLayout>