
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".drawer_items_fragments.music_player.MusicPlayerFragment">

    <View
        android:id="@+id/main_fragment_spinner_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#22FFFFFF"/>

    <ImageView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/selected_menu"
        android:padding="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/main_fragment_spinner_layout"/>

    <Spinner
        android:id="@+id/main_fragment_playlist_spinner"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/gGrey"
        android:background="@null"
        app:layout_constraintStart_toEndOf="@id/settings"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/main_fragment_spinner_layout"/>

    <ImageButton
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/baseline_search_white_24dp"
        android:alpha="0.5"
        app:layout_constraintEnd_toStartOf="@id/search_toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/main_fragment_spinner_layout"/>

    <android.support.v7.widget.SearchView
        android:id="@+id/search_toolbar"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        app:searchIcon="@null"
        app:searchHintIcon="@null"
        app:queryHint="@string/search_hint"
        app:closeIcon="@drawable/search_clear_selector"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/playlist"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/main_fragment_spinner_layout"/>

    <ImageButton
        android:id="@+id/playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_toc_white_24dp"
        android:alpha="1"
        app:layout_constraintEnd_toStartOf="@id/artists"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/main_fragment_spinner_layout"/>

    <ImageButton
        android:id="@+id/artists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_people_white_24dp"
        android:alpha="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/main_fragment_spinner_layout"/>

    <FrameLayout
        android:id="@+id/song_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp"/>

</android.support.constraint.ConstraintLayout>


